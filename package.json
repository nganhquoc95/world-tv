{
  "name": "worldtv",
  "version": "2.0.0",
  "description": "A TypeScript web app for browsing TV channels by country and category using the IPTV database",
  "main": "dist/server/app.js",
  "scripts": {
    "start": "tsx src/server/app.ts",
    "dev": "concurrently \"npm run server:watch\" \"npm run client:dev\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir public/dist",
    "build:server": "tsc",
    "server:dev": "tsx src/server/app.ts",
    "server:watch": "nodemon --exec tsx src/server/app.ts --ext ts,tsx,json",
    "client:dev": "nodemon --exec \"vite --host\" --watch vite.config.ts --watch package.json --watch tsconfig.json --ext ts,tsx,json,js,jsx",
    "generate-channels": "ts-node scripts/parseChannels.ts",
    "test": "vitest",
    "install": "npm install --legacy-peer-deps"
  },
  "keywords": [
    "tv",
    "iptv",
    "channels",
    "database",
    "typescript",
    "express",
    "web"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@iptv-org/database": "github:iptv-org/database",
    "@reduxjs/toolkit": "^2.10.1",
    "@types/csvtojson": "^1.1.5",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.14",
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-scripts": "5.0.1",
    "redux-saga": "^1.4.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tsx": "^4.19.2",
    "vite": "^7.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
